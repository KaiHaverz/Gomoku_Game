{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Raylib Project",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "main.cpp",
                "-o", "gomoku",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lraylib",
                "-framework", "OpenGL",  // macOS 必需
                "-framework", "Cocoa"    // macOS 必需
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}